html,
body,
#root
  width 100%
  height 100%

// 重置a标签样式
a
  text-decoration: none
  outline: none
a:active, a:hover
  text-decoration: none


$gray = #666666
$l_gray = #CCCCCC
$blue = #6699CC  //#99CCCC

#root
  header
    height 100px
    color: #fff
    background-color: $blue
  .container
    display: flex
    justify-content: flex-start
    width: 100%
    height: calc(100vh - 100px);
    .navigation
      width: 250px;
      margin-top: 5px
      flex: 0 0 auto;
      border-right: 1px solid $l_gray
      a
        display: inline-block
        width 100%
        height 50px
        color: $gray
        line-height: @height
        text-align: center
        position relative
      .is_active
        background-color rgba(153,204,255,.3)
        // color: #fff
        &:before
          content: ""
          position absolute
          right 0
          top 0
          bottom 0
          border-right: 3px solid $blue;
    .right_cont
      flex: 1 1 auto;
      border: 1px solid $l_gray
      box-sizing: content-box
      margin-top: 5px
      margin-left: 5px