html,
body,
#root
  width 100%
  height 100%

// 重置a标签样式
a
  text-decoration: none
  outline: none
a:active, a:hover
  text-decoration: none


$gray = #666666
$l_gray = #CCCCCC
$blue = #6699CC  //#99CCCC

#root
  header
    height 100px
    color: #fff
    background-color: $gray
  .container
    display: flex
    justify-content: flex-start
    width: 100%
    height: calc(100vh - 100px);
    .navigation
      width: 250px;
      margin-top: 5px
      flex: 0 0 auto;
      background-color $blue
      a
        display: inline-block
        width 100%
        height 50px
        color: #fff
        line-height: @height
        background-color $blue
        border-bottom: 1px solid $l_gray
    .right_cont
      flex: 1 1 auto;